<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ScrollView
        android:fillViewport="true"
        android:id="@+id/background_signUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFF2F2F2"
        android:paddingTop="36dp"
        android:paddingBottom="100dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="138dp"
                android:layout_marginHorizontal="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_SignIn"
                    android:textSize="23sp"
                    android:layout_marginEnd="12dp"
                    android:layout_height="match_parent"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_back"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="543dp"
                        android:background="@drawable/ic_shapebackground"
                        android:backgroundTint="@color/blue_skye"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="115dp"
                            android:background="@drawable/ic_shapebackground"
                            android:backgroundTint="@color/white"
                            android:orientation="vertical"
                            android:paddingTop="27dp"
                            android:paddingBottom="50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="18dp"
                                android:layout_marginBottom="17dp"
                                android:background="@drawable/ic_shapebackground"
                                android:backgroundTint="@color/grey"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_email" />

                                <EditText
                                    android:id="@+id/edTxt_Email_SignUp"
                                    android:layout_width="match_parent"
                                    android:layout_height="39dp"
                                    android:hint="Email"
                                    android:textColorHint="@color/black"
                                    android:textSize="18sp"
                                    tools:ignore="TouchTargetSizeCheck"
                                    android:textColor="@color/black"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/r32lk9gk025i"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="18dp"
                                android:layout_marginBottom="17dp"
                                android:background="@drawable/ic_shapebackground"
                                android:backgroundTint="@color/grey"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_lock" />

                                <EditText
                                    android:id="@+id/edTxt_Password_SignUp"
                                    android:layout_width="match_parent"
                                    android:layout_height="39dp"
                                    android:hint="Password"
                                    android:inputType="textPassword"
                                    android:textColorHint="@color/black"
                                    android:textSize="18sp"
                                    tools:ignore="TouchTargetSizeCheck"
                                    android:textColor="@color/black"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="18dp"
                                android:layout_marginBottom="17dp"
                                android:background="@drawable/ic_shapebackground"
                                android:backgroundTint="@color/grey"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="10dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_lock" />

                                <EditText
                                    android:id="@+id/edTxt_ConfirmPass_SignUp"
                                    android:layout_width="match_parent"
                                    android:layout_height="39dp"
                                    android:hint="Retype password"
                                    android:inputType="textPassword"
                                    android:textColorHint="@color/black"
                                    android:textSize="18sp"
                                    tools:ignore="TouchTargetSizeCheck"
                                    android:textColor="@color/black"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="22dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btn_SignUp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="7dp"
                                    android:text="Sign Up"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"
                                    android:textSize="20sp"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_HaveAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="You have an account?   Login now!"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="147dp"
                    android:layout_height="222dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-116dp"
                    android:layout_marginEnd="121dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo_reviewfood" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>