<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="37dp"
        card_view:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/imgV_userImageBorder"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@color/black"
            tools:ignore="ContentDescription,ImageContrastCheck,VisualLintBounds"
            app:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="35dp"
        card_view:cardPreventCornerOverlap="false">

    <ImageView
        android:id="@+id/imgV_userImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_launcher_background"
        tools:ignore="ContentDescription,ImageContrastCheck,VisualLintBounds"
        app:ignore="ContentDescription,MissingConstraints" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="20dp"
        card_view:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/commentbg"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFD9D9D9"
            tools:ignore="ContentDescription,ImageContrastCheck,VisualLintBounds"
            app:ignore="ContentDescription,MissingConstraints" />

        <TextView
            android:id="@+id/txt_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:padding="10dp"
            android:text="Minh Tam"
            android:textColor="#000000"
            app:ignore="HardcodedText,VisualLintOverlap" />

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:paddingStart="10dp"
            android:paddingTop="35dp"
            android:text="Món này không ngon lắm:<<"
            android:textColor="#000000"
            app:ignore="HardcodedText,RtlSymmetry" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>