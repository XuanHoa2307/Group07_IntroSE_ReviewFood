<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:paddingBottom="24dp"
        android:elevation="4dp"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="21dp"
                android:paddingHorizontal="6dp"
                android:layout_marginBottom="11dp"
                android:elevation="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:layout_marginStart="85dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Create Post"/>

                <ImageView
                    android:id="@+id/btn_createPost"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="90dp"
                    android:src="@drawable/ic_nextt"
                    android:scaleType="fitXY"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">
                
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_User"
                    android:layout_width="44dp"
                    android:layout_height="46dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/avatar_default2"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/fullName_User"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="User name"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="87dp"
                android:paddingHorizontal="14dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="11dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edTxt_Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Món gà rán này rất ..|"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imagePost"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:layout_marginHorizontal="11dp"
                android:layout_marginBottom="11dp"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:src="@drawable/add_image_post"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:id="@+id/r63dd0jta5c8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r98x06ei0us"
                    android:layout_width="39dp"
                    android:layout_height="41dp"
                    android:layout_marginEnd="4dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:id="@+id/rmrzt2996hhr"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="12dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rr4zrwu9hgul"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/rcwj0uyzu0v9"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Picture"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rvs91bfq6df"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/re4178mdvjdk"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:id="@+id/rw35302kcnag"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/r397p9ls3oc6"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="9dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/rnlp2owm6jfb"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Address"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/r3diepb4xpyh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
                <ImageView
                    android:id="@+id/rm68avw6ua6t"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:id="@+id/ryvoyjfb2qta"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="14dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/r8vsjq589chg"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/rt9w8q6f0xcm"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Tag"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ryzxv9igz6ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="101dp"
                android:orientation="vertical">
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/ru9f7hblro1"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="103dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rq2023pr9uie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rz8m1rou22cn"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginStart="-93dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="122dp"
                    android:layout_height="47dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>