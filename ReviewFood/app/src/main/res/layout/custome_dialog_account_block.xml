<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dialog"
        >

        <TextView
            android:id="@+id/account_block_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Block?"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/close_create_post"/>

        <LinearLayout
            android:id="@+id/checkboxAccountBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/account_block_text_view"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp">

            <CheckBox
                android:id="@+id/lockForeverCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock account forever"/>

            <CheckBox
                android:id="@+id/lock3day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock this account for 3 days"/>

            <CheckBox
                android:id="@+id/lock7day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock this account for 7 days"/>

            <CheckBox
                android:id="@+id/lock30day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock this account for 30 days"/>


        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_back_accountBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkboxAccountBlock"
            android:background="@drawable/back_btn"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/btn_block_accountBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkboxAccountBlock"
            android:background="@drawable/btn_block"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

</RelativeLayout>