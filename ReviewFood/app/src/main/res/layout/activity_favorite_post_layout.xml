<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="147dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/ic_shapebackground"
        android:backgroundTint="@color/grey"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgFavorite_Post"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/garan"
            android:background="@drawable/ic_shapebackground"
            android:backgroundTint="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginStart="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fullName_FavoritePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FullName_Author"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_FavoritePost"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/fullName_FavoritePost"
                android:text="status...."
                android:textColor="@color/black"
                android:textSize="19dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_Detail"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/blue_skye"
                    android:text="Detail"
                    android:textSize="12dp"/>

                <Button
                    android:id="@+id/btn_Remove"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_skye"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="7dp"
                    android:text="Remove"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/time_Saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>